{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "module": "ES2022",
    "lib": ["DOM", "ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "alwaysStrict": true,
    // "noImplicitAny": true,
    "checkJs": true,
    "allowJs": true
  },
  "include": ["./src/ts/**/*.ts"],
  "exclude": ["node_modules"]
}
